<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OficinaApp.Pages.EditaUsuarioPage"
             Title="EditaUsuarioPage"
             NavigationPage.HasNavigationBar="False">
    
    <StackLayout VerticalOptions="CenterAndExpand"
                 Margin="16"
                 Padding="16">
       
        <Label
            x:Name="lblEmail"
            Text="E-mail" />
        <Entry
            Placeholder="Digite seu e-mail"
            x:Name="txtEmail"
            Text="{Binding Email}"/>

        <Label
            x:Name="lblSenha"
            Text="Senha" />
        <Entry
            Placeholder="Digite sua senha"
            x:Name="txtSenha"
            Text="{Binding Senha}"
            IsPassword="True"/>

        <Button
            Text="Cadastrar"
            x:Name="Cadastrar"
            Clicked="Cadastrar_Clicked"
            Margin="16"/>

        <Button
            Text="Voltar"
            x:Name="btnVoltar"
            Clicked="btnVoltar_Clicked"
            Margin="16"/>
        
    </StackLayout>
</ContentPage>