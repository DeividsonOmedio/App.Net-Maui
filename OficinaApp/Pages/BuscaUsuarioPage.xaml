<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OficinaApp.Pages.BuscaUsuarioPage"
             Title="BuscaUsuarioPage">
    <VerticalStackLayout>

        <CollectionView ItemsSource="{Binding Sistemas}"
                        SelectionMode="Single"
                        SelectionChanged="CollectionView_SelectionChanged"
                        Margin="14">

        </CollectionView>

        <Label 
            Text="Total Despesas"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            Margin="14" />

        <Label 
            Text="Entradas"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            Margin="14" />

        <Label 
            Text="Saldo"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            Margin="14" />

        <Label 
            Text="Total Entradas"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            Margin="14" />

        <Label 
            Text="A Receber"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            Margin="14" />

        <Label 
            Text="Saldo futuro"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            Margin="14" />
    </VerticalStackLayout>
</ContentPage>